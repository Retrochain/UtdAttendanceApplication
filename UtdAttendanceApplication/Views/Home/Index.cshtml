@model UtdAttendanceApplication.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Login Page";
}

<!-- 
    Written by Akshaan Singh, Dylan Hua, Ricardo Vargas
    For CS 4485.0W1, Final Project, Starting 04/04/2025

    This is the home page of the website, this is where the student will be asked to log in 
    using their UTD ID and a professor provided password. Once all the checks have been done,
    the user is allowed to enter into the website and answer the assigned quiz questions. 
-->

<div class="text-center align-items-center">
    <h1 class="display-4">Login</h1>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UtdId" class="control-label">UTD ID</label>
                        <input asp-for="UtdId" class="form-control" />
                        <span asp-validation-for="UtdId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Log In!" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    <div>
        Don't have an account? Contact your course professor to add you in the record
    </div>
</div>
