@{
    ViewData["Title"] = "Quiz Not Available";
}

<div class="container text-center mt-5">
    <div class="alert alert-warning p-4">
        <h2>Quiz Not Available</h2>
        <p>@ViewBag.ErrorMessage</p>
        <p>Course: @ViewBag.CourseName</p>
        <p>Quiz: @ViewBag.QuizTitle</p>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-primary">Return to Login</a>
        </div>
    </div>
</div>